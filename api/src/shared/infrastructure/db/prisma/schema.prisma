generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String   @id @default(uuid())
  sku           String   @unique
  name          String
  description   String?
  price         Float
  stockQuantity Int
  isActive      Boolean  @default(true)
  createdAt     DateTime
  category      String?
}
